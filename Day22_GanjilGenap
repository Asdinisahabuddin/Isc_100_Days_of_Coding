import java.util.Scanner;
public class Day22_Angka_GanjilGenap {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		System.out.print("Masukkan angka: ");
		int angka = sc.nextInt();
		int hasil1, hasil2;
		
		
		if (angka % 2 == 0 ){
			System.out.println("Bilangan genap: "+angka);
			hasil1 = angka + 2;
			System.out.print(" hasil bilangan genap+ 2 = "+hasil1);
		}
		else if (angka % 2 != 0){
			System.out.println("Bilangan ganjil");
			hasil2= angka+1;
			System.out.print("hasil bilangan ganjil + 1 = "+hasil2);
		}
		else{
			System.out.println("false");
		}
		
	}
}