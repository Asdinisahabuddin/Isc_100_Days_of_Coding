import java.util.Scanner;

public class Day43 {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);

		int angka = sc.nextInt();

		int hasil = 0;

		for (int i = 1; i <= angka; i++) {
			hasil += i;

			System.out.print(i);
			if (i < angka) {
				System.out.print(" + ");
			}
		}
		System.out.print(" = " + hasil);
	}


}